<p id="notice"><%= notice %></p>
<pre><%= @refresh_count %>/<%= @refresh_pending %></pre>
<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Cgid</th>
      <th>Pseudo</th>
      <th>Level</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.cgid %></td>
        <td><%= player.pseudo %></td>
        <td><%= player.level %></td>
        <td><%= player.rank %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
<%= form_tag( {controller: "players", action: "search"}, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>